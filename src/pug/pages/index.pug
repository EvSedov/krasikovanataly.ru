block content
        header.py-3.border-bottom
            .container.d-flex.justify-content-between.flex-wrap.justify-content-center
                a.d-flex.align-items-center.mb-3.mb-md-0.text-dark.text-decoration-none(href='#')
                    img.d-block.mx-auto.me-2(src=require('../../assets/img/logo.jpg') alt='Логотип Центр по реабилитации и коррекции речи' width='50' height='50')
